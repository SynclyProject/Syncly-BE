<configuration>
    <!-- 앱/호스트 식별 -->
    <contextName>syncly-backend</contextName>
    <property name="HOSTNAME" value="${HOSTNAME:-unknown}"/>
    <springProperty name="springAppName" source="spring.application.name"/>

    <!-- 패턴/공통 appender -->
    <timestamp key="BY_DATE" datePattern="yyyy-MM-dd"/>
    <property name="LOG_PATTERN"
              value="[%d{yyyy-MM-dd HH:mm:ss}:%-4relative] %green([%thread]) %highlight(%-5level) %boldWhite([%C.%M:%yellow(%L)]) - %msg%n"/>

    <include resource="console-appender.xml"/>

    <!-- 디스코드 웹훅 URL: Spring 설정에서 꺼내옴 -->
    <springProperty name="DISCORD_ERROR_WEBHOOK_URL" source="logging.discord.webhook-url"/>

    <!-- 콘솔은 항상 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <!-- prod에서만 디스코드 추가 부착 -->
        <springProfile name="prod">
            <include resource="discord-error-appender.xml"/>
            <appender-ref ref="ASYNC_DISCORD"/>
        </springProfile>
    </root>

    <!-- (선택) 노이즈 감소 -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>
</configuration>
